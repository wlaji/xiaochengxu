.movie_item{
  animation:fadein 1.8s ease ;
  background:#ccc url(http://img0.imgtn.bdimg.com/it/u=362878919,2554882339&fm=27&gp=0.jpg);
  background-size:100% 100%;
  background-attachment:fixed;
}
@keyframes fadein{
  from{opacity:0;}
  to{opacity:1;}
}
.movie_item{
  display:flex;
  box-sizing: border-box;
  width:100%;
  height:421rpx;
  padding:10rpx 0;
  margin-bottom:5rpx;
  border-bottom:1px solid #ccc;
  border-top:1px solid #ccc;
  box-shadow: 0 10rpx 30rpx #f4f4f4;
  color:#ccc;
  
}

.movie_img{
  float:left;
  width:300rpx;
  height:400rpx;
}

.movie_img image{
  width:300rpx;
  height:400rpx;
  border-radius: 5px;
}
.movie_detail{
  align-self: center;
  float:left;
  margin-left:30rpx;
  line-height:1.3rem;
  font-size:13px;
  font-family: "微软雅黑";

}
.point {
  width: 100%;
  line-height: 80rpx;
  text-align: center;
  color: #ccc;
  font-size: 15px;
}
