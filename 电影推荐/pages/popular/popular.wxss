@import "../../component/films/films.wxss";
.content{
  animation:fadein 1.8s ease ;
}
@keyframes fadein{
  from{opacity:0;}
  to{opacity:1;}
}
.search_bar {
  display: flex;
  justify-content: center;
  padding: 10rpx;
  position: relative;
  background-color:azure;
  animation: fadeIn 1.8s;
}
.search_txt {
  width: 95%;
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #43a39f;
  border-radius: 10px;
  padding: 0 20rpx;
  background-color: white;
}

.search_img {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 40rpx;
  top: 26rpx;
  z-index:10
}

.banner {
  width: 100%;
  height: 300rpx;
  background-color: #eee;
  animation: fadeIn 1.8s;
}

.banner-item {
  width: 100%;
  height: 300rpx;
}

